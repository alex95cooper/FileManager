<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <Platforms>AnyCPU;x86</Platforms>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Images\drive_icon.png" />
    <None Remove="Images\file_icon.png" />
    <None Remove="Images\folder_icon.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Images\drive_icon.png" />
    <Resource Include="Images\file_icon.png" />
    <Resource Include="Images\folder_icon.png" />
    <Resource Include="Images\sync_buttonleft_icon.png" />
    <Resource Include="Images\sync_buttonright_icon.png" />
    <Resource Include="Images\update_button_image.png" />
    <Resource Include="Images\search_button_icon.png" />
    <Resource Include="Images\return_button_icon.png" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Settings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>Settings.settings</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="Properties\Settings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>Settings.Designer.cs</LastGenOutput>
    </None>
  </ItemGroup>

</Project>
